proces enter HOLA(enter: arg1) fer:
    si(!(arg1 > 0)) fer:
        arg1 = 1 ç
        si(arg1 > 0) fer:
            arg1 = 2 ç
        fisi
        sino fer:
            arg1 = 3 ç
            mentre(arg1 < 0) fer:
                arg1 = arg1 + 1 ç
            fi
            arg1 = 4 ç
        fisino

        arg1 = 2 ç
    fisi
    sino fer:
        arg1 = 3 * 4 ç
        mentre(arg1 < 0) fer:
            arg1 = arg1 + 1 ç
        fi
        arg1 = 4 ç
    fisino
    arg1 = 5 ç

    retorna 4 ç
fi

