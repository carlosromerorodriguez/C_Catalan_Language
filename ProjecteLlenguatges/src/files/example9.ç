proces enter HOLA(enter: arg1) fer:
    si(arg1 > 0) fer:
        mentre(arg1 > 0) fer:
            arg1 = arg1 - 1 ç
        fi
    fi
    sino fer:
        mentre(arg1 < 0) fer:
            arg1 = arg1 + 1 ç
        fi
    fi

    retorna 4 ç
fi

proces Calçot() fer:
    enter: b = 4, c = 5, d = 6 ç
    siono: ok = cert ç

    si((b < 6) i (c > 4) i (d igual 5)) fer:
        enter: a = 3 ç
    fi

    enter: prova = 0 ç
fi


